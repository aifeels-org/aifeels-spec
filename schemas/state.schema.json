{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aifeels.org/schemas/state/v0.1.0",
  "title": "Aifeels Emotional State v0.1",
  "type": "object",
  "required": ["frustration", "trust", "urgency", "stress", "caution", "metadata"],
  "properties": {
    "frustration": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Repeated failures, blockers, error loops"
    },
    "trust": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Environment stability, tool reliability"
    },
    "urgency": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Time pressure, task criticality"
    },
    "stress": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Resource constraints, parallel demands"
    },
    "caution": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Risk awareness, verification need"
    },
    "metadata": {
      "type": "object",
      "required": ["last_updated", "trend", "confidence"],
      "properties": {
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of last state change"
        },
        "trend": {
          "type": "string",
          "enum": ["increasing", "decreasing", "stable"],
          "description": "Directional trend based on recent history"
        },
        "confidence": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 1.0,
          "description": "Confidence in signal value based on recency"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
