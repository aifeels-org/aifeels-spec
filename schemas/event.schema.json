{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aifeels.org/schemas/event/v0.1.0",
  "title": "Aifeels Event v0.1",
  "type": "object",
  "required": ["event_type", "timestamp"],
  "properties": {
    "event_type": {
      "type": "string",
      "description": "Event name (standard or namespaced custom)",
      "examples": [
        "task_failed",
        "user_corrected",
        "com.example.custom_event"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when event occurred"
    },
    "context": {
      "type": "object",
      "description": "Optional event context",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
